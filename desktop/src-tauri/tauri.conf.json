{
  "$schema": "https://raw.githubusercontent.com/nicegui-org/nicegui/main/tauri/tauri.conf.json",
  "productName": "FixMe",
  "version": "1.0.0",
  "identifier": "com.fixme.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "FixMe",
        "width": 880,
        "height": 680,
        "minWidth": 680,
        "minHeight": 480,
        "center": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../../sidecar/main.py": "sidecar/main.py",
      "../../fixme/": "fixme/",
      "../../.env": ".env"
    },
    "macOS": {
      "dmg": {
        "background": "icons/dmg-background.png",
        "appPosition": {
          "x": 200,
          "y": 400
        },
        "applicationFolderPosition": {
          "x": 600,
          "y": 400
        },
        "windowSize": {
          "width": 800,
          "height": 530
        }
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "fs": {}
  }
}
