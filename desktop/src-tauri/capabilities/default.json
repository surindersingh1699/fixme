{
  "identifier": "default",
  "description": "Default capabilities for FixMe",
  "windows": ["*"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "shell:allow-execute",
    "fs:default",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [{ "path": "$HOME/.fixme/**" }]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [{ "path": "$HOME/.fixme/**" }]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "$HOME/.fixme/**" }]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [{ "path": "$HOME/.fixme/**" }]
    }
  ]
}
